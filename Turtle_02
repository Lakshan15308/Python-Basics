import turtle   

# Setup the screen
screen = turtle.Screen()
screen.bgcolor("lightblue")
screen.title("Simple Human Face")

# Create turtle
face = turtle.Turtle()
face.speed(3)

def draw_circle(color, radius, x, y):
    face.penup()
    face.goto(x, y)
    face.pendown()
    face.fillcolor(color)
    face.begin_fill()
    face.circle(radius)
    face.end_fill()

def draw_head():
    draw_circle("peachpuff", 100, 0, -100)

def draw_eye(x, y):
    draw_circle("white", 15, x, y)
    draw_circle("black", 5, x, y + 5)

def draw_nose():
    face.penup()
    face.goto(0, -30)
    face.setheading(-30)
    face.pendown()
    face.color("black")
    face.width(3)
    face.forward(20)
    face.setheading(30)
    face.forward(20)

def draw_mouth():
    face.penup()
    face.goto(-40, -60)
    face.setheading(-60)
    face.width(5)
    face.color("red")
    face.pendown()
    face.circle(50, 120)

def draw_ears():
    draw_circle("peachpuff", 20, -100, -20)
    draw_circle("peachpuff", 20, 100, -20)

#def draw_hair():
#   face.penup()
#    face.goto(-70, 50)
#    face.setheading(60)
#    face.width(4)
#    face.color("black")
#    face.pendown()
#    for _ in range(10):
#        face.forward(30)
#        face.backward(30)
#        face.right(12)

# Draw the face
draw_head()
draw_ears()
draw_eye(-35, 20)
draw_eye(35, 20)
draw_nose()
draw_mouth()
draw_hair()


print ("Drawing complete!")

# Hide turtle and finish
face.hideturtle()
screen.mainloop()
